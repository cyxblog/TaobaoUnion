<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/back"
            android:id="@+id/ticket_back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/text_tao_kou_ling"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/white"
                android:id="@+id/ticket_cover"/>

        </androidx.cardview.widget.CardView>

        <com.example.taobaounion.view.custom.LoadingView
            android:id="@+id/ticket_cover_loading"
            android:layout_width="33dp"
            android:layout_centerInParent="true"
            android:layout_height="33dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载出错，请点击重试"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/ticket_load_retry"/>

    </RelativeLayout>


    <EditText
        android:layout_width="244dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:text="￥FeDI8G64lfewg￥"
        android:textColor="@color/gray"
        android:gravity="center"
        android:background="@drawable/shape_ticket_code_bg"
        android:layout_marginTop="30dp"
        android:id="@+id/ticket_code"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="领券"
        android:gravity="center"
        android:background="@drawable/shape_button_bg"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:id="@+id/ticket_copy_and_open_btn"/>

</LinearLayout>