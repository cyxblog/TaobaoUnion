<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/home_pager_parent"
    android:background="@color/colorPageBg">

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_pager_refresh">

        <com.lcodecore.tkrefreshlayout.views.TBNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_pager_nested_scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/home_pager_header_container">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_marginBottom="12dp">

                        <com.example.taobaounion.view.custom.AutoLoopViewPager
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:id="@+id/looper_view_pager" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/looper_point_container"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal"/>

                    </RelativeLayout>


                    <include layout="@layout/include_home_pager_title"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/home_pager_content_list"/>

            </LinearLayout>

        </com.lcodecore.tkrefreshlayout.views.TBNestedScrollView>

    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>


</LinearLayout>